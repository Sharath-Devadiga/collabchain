generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String    @id @default(uuid())
  email                 String    @unique
  createdAt             DateTime  @default(now())
  username              String    @unique
  githubId              Int       @unique
  githubAccessToken     String
  refreshToken          String?
  refreshTokenExpiresAt DateTime?
  teamsCreated          Team[]    @relation("CreatedTeams")
  teamsJoined           Team[]    @relation("JoinedTeams")
  messages              Message[]
  repo                  Repo[]
  joinRequests          TeamJoinRequest[]  @relation("UserJoinRequests")
}

model Team {
  id          String     @id @default(uuid())
  title       String
  githubRepo  String?
  createdBy   User       @relation("CreatedTeams", fields: [createdById], references: [id])
  createdById String
  members     User[]     @relation("JoinedTeams")
  chats       ChatRoom[]
  visibility   TeamVisibility    @default(PUBLIC)
  joinRequests  TeamJoinRequest[]  @relation("TeamJoinRequests")
  invitations  TeamInvitation[]
}

enum TeamVisibility{
  PUBLIC
  PRIVATE
}

model TeamJoinRequest{
  id      String      @id @default(uuid())
  team     Team        @relation("TeamJoinRequests",fields: [teamId],references: [id],onDelete: Cascade)
  teamId    String    
  requester  User      @relation("UserJoinRequests",fields: [requesterId],references: [id])
  requesterId  String
  status        RequestStatus   @default(PENDING)
  createdAt     DateTime    @default(now())
}

enum RequestStatus{
  PENDING
  ACCEPTED
  REJECTED
}

model TeamInvitation {
  id        String   @id @default(uuid())
  code      String   @unique
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id],onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime? 
}

model ChatRoom {
  id        String    @id @default(uuid())
  title     String
  createdAt DateTime  @default(now())
  team      Team      @relation(fields: [teamId], references: [id],onDelete: Cascade)
  teamId    String
  messages  Message[]
  Repo      Repo?       @relation("ChatRoomRepo")
}

model Message {
  id        String   @id @default(uuid())
  content   String?
  fileUrl   String?
  createdAt DateTime @default(now())
  sender    User     @relation(fields: [senderId], references: [id])
  senderId  String
  chat      ChatRoom @relation(fields: [chatId], references: [id])
  chatId    String
}

model Repo {
  id        String  @id @default(uuid())
  name      String
  githubLink  String  @unique
  chatRoomId  String  @unique
  chatRoom  ChatRoom @relation("ChatRoomRepo", fields: [chatRoomId], references: [id])
  commits    Commit[]
  ownerId     String
  owner       User  @relation(fields: [ownerId], references: [id])
}

model Commit {
  id      String @id @default(uuid())
  repoId  String
  repo    Repo  @relation(fields: [repoId], references: [id])
  githubCommitHash  String @unique
  repoHash  String
  rating  Int
  comment String
  author String
}